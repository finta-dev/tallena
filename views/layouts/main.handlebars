    -->

    <!-- MENU HERRAMIENTAS -->
    <header class="ui secondary menu">

        <!-- Titulo de la cabecera -->
        <h5 class="header item">{{header_title}}</h5>

        
        <div class="right menu">
            <!-- Boton "nuevo" -->
            <div class="item">
                <div class="ui mini buttons">
                    <div class="ui button">Nuevo ticket</div>
                    <div class="ui floating dropdown icon button">
                        <i class="dropdown icon"></i>
                        <div class="menu">
                            <div class="item">Nuevo acceso</div>
                            <div class="item">Nuevo articulo</div>
                            <div class="item">Nuevo cliente</div>
                            <div class="item">Nuevo contacto</div>
                            <div class="item">Nuevo grupo</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Buscador -->
            <div class="item">
                <div class="ui transparent icon small input">
                    <input type="text" placeholder="Buscar...">
                    <i class="search icon"></i>
                </div>
            </div>

            <!-- Favoritos -->
            <a href="#" class="item tooltip" data-variation="inverted" data-content="Favoritos" data-position="left center">
                <i class="red heart icon"></i>
            </a>

            <!-- Log out -->
            <a href="/logout" class="icon item">
                <i class="sign-out icon"></i>
            </a>
        </div>

    </header>

    <!-- JQUERY --> <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha256-pasqAKBDmFT4eHoN2ndd6lN370kFiGUFyTiUHWhU7k8=" crossorigin="anonymous"></script>
